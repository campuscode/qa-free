<%= form_for(@test) do |f| %>
  <% if @test.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@test.errors.count, "Erro") %>: * Fields are required!</h2>

      <ul>
        <% @test.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <ul>
    <p>
      <div class="field">
        <label >Title*:</label>
        <%= f.text_field :title, class:"form-control"%>
      </div>
    </p>

    <p>
      <div class="field">
        <label >Description*:</label>
        <%= f.text_field :description, class:"form-control"%>
      </div>
    </p>

    <p>
      <div class="field">
        <label >Criticality*:</label>
        <%= f.select(:criticality, class:"form-control", options_for_select([['Low', "Low"], ['Medium', "Medium"],['Critical', "Critical"]])) %>
      </div>
    </p>

    <p>
      <div class="field">
        <label >Time*:</label>
        <%= f.text_field :time, class:"form-control"%>
      </div>
    </p>

    <p>
      <button type="submit">Save</button>
    </p>
  </ul>
<%end%> 