<div class="col-md-12">
  <div class="col-md-4">
    <h2>Overview</h2>
    <hr>
    <div class="row">
      <div class="col-md-6 not_executed">
        <%= @not_executed_tests%> <span>- Not Executed</span>
      </div>
      <div class="col-md-6 failures">
        <%= @failured_tests%> <span>- Failures</span>
      </div>
      <div class="col-md-6 passed">
        <%= @passed_tests%> <span>- Passed</span>
      </div>
      <div class="col-md-6 blocked">
        <%= @blocked_tests%> <span>- Blocked</span>
      </div>
    </div>
  </div>
  <div class="col-md-8">
    <div class="row col-md-12">
      <h2 class="pull-left">Test Cases</h2>
      <span class="pull-right new-project">
        <%= link_to "New Test Case", new_project_test_case_path(test_plan: @test_plan.id), class: "btn btn-primary" %>
      </span>
    </div>
    <div class="row col-md-12">
      <table class="table table-hover">
        <tbody>
          <% @test_plan.test_cases.each do |tc| %>
            <tr>
              <td class="col-md-7"><%= tc.title%></td>
              <td class="col-md-3"><%= tc.status%></td>
              <td class="col-md-2">
                <%= link_to "", project_test_case_path(@project, tc), class: "glyphicon glyphicon-search col-md-4 details" %>
                <%= link_to "", edit_project_test_plan_test_case_path(@project, @test_plan, tc), class: "glyphicon glyphicon-pencil col-md-4 edit_icon" %>
                <%= link_to "", [@project, @test_plan, tc], method: :delete, data: { confirm: 'Are you sure?' },
                      class: "glyphicon glyphicon-trash col-md-4 delete_icon" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>