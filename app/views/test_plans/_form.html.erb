<%= form_for [@test_plan] do |f| %>
  <% if @test_plan.errors.any? %>
	  <div id="error_explanation">
	    <h2>
	    	<%= pluralize(@test_plan.errors.count, "error") %> *The field should not be blank
	    </h2>
	  	<ul>
	    	<% @test_plan.errors.full_messages.each do |message| %>
	      	<li><%= message %></li>
	  		<% end %>
	  	</ul>
		</div>
  <% end %>

  <p>
	  <div class="field">
	    <label >Name*:</label>
	    <%= f.text_field :test_plan_name%>
	  </div>
	</p>

	<p>
	  <div class="field">
	    <label >Description*:</label>
	    <%= f.text_field :test_plan_description%>
	  </div>
	</p>

	<p>
	  <button type="submit">Confirm</button>
	</p>
<%end%>