  <div class="row col-md-8 col-md-offset-1">
    <h1 class="pull-left">Projects</h1>
    <% if admin_signed_in?%>
      <span class="pull-right new-project"> <%= link_to "New project", new_project_path, class: "btn btn-primary" %> </span>
    <% end %>
  </div>
  <div class="row col-md-8 col-md-offset-1">
    <table class="table table-hover">
      <tbody>
        <% @projects.each do |project| %>
          <tr>
            <td class="col-md-10"><%= link_to project.name, project %></td>
            <td class="col-md-2">
              <%= link_to "", project , class: "glyphicon glyphicon-search col-md-6 details"%>
              <%= link_to "", project, method: :delete, data: { confirm: 'Are you sure?' }, class: "glyphicon glyphicon-trash col-md-6 delete_icon" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
