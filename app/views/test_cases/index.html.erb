<h1>Test Case List</h1>
<div>
	<ul>
		<%= link_to "New Test Case", new_project_test_case_path %>
	</ul>	
  	<% @test.each do |test| %>
  		<ul>
			<div><strong>Title:</strong><%= test.title%></div>
      <div><strong>Description:</strong><%= test.description %></div>
      <div><strong>Criticality:</strong><%= test.criticality%></div>
      <div><strong>Time:</strong><%= test.time%></div>
    		<div><%= link_to 'Details', "project/#{@project}/test_cases/#{test}" %></div>
    		<div><%= link_to "Edit", "project/#{@project}/test_cases/#{test}/edit" %></div>
    		<div><%= link_to 'Destroy', [@project, test], method: :delete, data: { confirm: 'Are you sure?' } %></div>
  		</ul>
  	<% end %>
</div>