<h1>Test Case List</h1>
<div>
	<ul>
		<%= link_to "New Test Case", new_test_case_path %>
	</ul>	
  	<% @test.each do |test| %>
  		<ul>
      <div><strong>Status:</strong><%= test.status%></div>
			<div><strong>Title:</strong><%= test.title%></div>
      <div><strong>Description:</strong><%= test.description %></div>
      <div><strong>Criticality:</strong><%= test.criticality%></div>
      <div><strong>Time:</strong><%= test.time%></div>
    		<div><%= link_to 'Details', test %></div>
    		<div><%= link_to "Edit", edit_test_case_path(test.id) %></div>
    		<div><%= link_to 'Delete', test, method: :delete, data: { confirm: 'Do you really want to delete the test case?' } %></div>
  		</ul>
  	<% end %>
</div>